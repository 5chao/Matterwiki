{
  "name": "matterwiki",
  "version": "0.2.1",
  "description": "A simple and beautiful wiki for teams",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack -p --config ./webpack.config.prod.js --progress --profile --colors",
    "dev": "node index.js",
    "dev:debug": "node  --inspect index.js",
    "dev-testing": "cross-env TESTING=true node index.js",
    "start": "npm run build && cross-env NODE_ENV=production node index.js",
    "testcafe": "testcafe chrome tests/e2e/tests/*.js --app \"npm run dev-testing\" --app-init-delay 10000",
    "test": "npm run build && npm run testcafe"
  },
  "bin": {
    "wiki": "./install.js"
  },
  "engines": {
    "node": "~0.12.0 || ^4.2.0 || ^6.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matterwiki/Matterwiki.git"
  },
  "author": "Krishna Gopinath (@krishnagopinath) and Nishant Arora (@nshntarora)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matterwiki/Matterwiki/issues"
  },
  "homepage": "http://matterwiki.com",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-helpers": "^6.24.1",
    "bcryptjs": "2.4.0",
    "body-parser": "1.15.2",
    "bookshelf": "0.10.0",
    "classnames": "^2.2.5",
    "draft-js": "^0.10.0",
    "draftjs-utils": "^0.7.4",
    "express": "4.14.0",
    "jsonwebtoken": "7.1.9",
    "knex": "0.11.10",
    "multer": "1.2.1",
    "react": "15.3.0",
    "react-bootstrap": "^0.30.10",
    "react-dom": "15.3.0",
    "react-icons": "^2.2.5",
    "react-router-bootstrap": "^0.24.2",
    "react-router-dom": "4.1.1",
    "react-s-alert": "1.2.2",
    "sqlite3": "^3.1.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "3.1.4",
    "css-loader": "^0.28.1",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "style-loader": "^0.17.0",
    "testcafe": "0.13.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0"
  }
}
