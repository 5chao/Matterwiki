{
  "name": "matterwiki",
  "version": "0.2.1",
  "description": "A simple and beautiful wiki for teams",
  "main": "index.js",
  "scripts": {
    "build":
      "cross-env NODE_ENV=prod webpack -p --config ./webpack.config.prod.js --progress --profile --colors",
    "start":
      "npm run build && cross-env NODE_ENV=prod node ./src/api/server.js",
    "dev":
      "cross-env NODE_ENV=dev nodemon --config nodemon.json ./server/server.js",
    "dev:debug":
      "cross-env NODE_ENV=dev nodemon --config nodemon.json  --inspect=5858 ./src/api/server.js",
    "lint": "eslint ./src/**",
    "format": "prettier --write --jsx-bracket-same-line",
    "test":
      "cross-env NODE_ENV=test jest --config ./jest.config.json --runInBand"
  },
  "bin": {
    "wiki": "./install.js"
  },
  "engines": {
    "node": "^8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matterwiki/Matterwiki.git"
  },
  "author":
    "Krishna Gopinath (@krishnagopinath) and Nishant Arora (@nshntarora)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matterwiki/Matterwiki/issues"
  },
  "homepage": "http://matterwiki.com",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0-beta.2",
    "chance": "^1.0.12",
    "classnames": "^2.2.5",
    "dotenv": "^4.0.0",
    "draft-js": "^0.10.3",
    "draftjs-utils": "^0.7.4",
    "emoji-mart": "^2.1.1",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "history": "^4.7.2",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^4.17.4",
    "lokijs": "^1.5.1",
    "morgan": "^1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-s-alert": "^1.3.1",
